/* pages/mine/mine.wxss */

page {
  box-sizing: border-box;
  display: block;
  min-height: 100%;
  background-color: #f8f8f8;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.userinfo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.userinfo-avatar {
  margin-top: 100rpx;
  margin-bottom: 52rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.bind-phone {
  color: #e81525;
  font-size: 28rpx;
}

.bg-border {
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.mine-linear {
  padding-left: 40rpx;
  display: flex;
  height: 100rpx;
  align-items: center;
}

.img-left {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.img-arrow {
  width: 12rpx;
  height: 20rpx;
  position: absolute;
  right: 70rpx;
}

.mine-text {
  font-size: 32rpx;
  color: #333;
}

.mine-text-gray {
  font-size: 28rpx;
  color: #666;
}

.mine-text-bold {
  padding-right: 10rpx;
  color: #000;
  font-size: 36rpx;
  font-weight: bold;
}

.mine-text-mark {
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #e60112;
  padding: 4rpx;
  white-space: nowrap;
  max-height: 36rpx;
}

.divider {
  height: 1rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: #e5e5e5;
}

.divider-vertical {
  width: 1rpx;
  background-color: #e5e5e5;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
